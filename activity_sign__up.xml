<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dellpc.smartvillage.Sign_Up"
    android:background="@drawable/details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:id="@+id/imageView5"
                android:src="@drawable/sv"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#515151"></LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:id="@+id/tableLayout"
                android:baselineAligned="false"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tblbck"
                android:paddingTop="30dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/txtFname"
                        android:layout_weight="1"
                        android:hint="First Name"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="20"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/txtLname"
                        android:layout_weight="1"
                        android:hint="Last Name"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="20"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <RadioGroup
                        android:layout_width="343dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="left|center_horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Gender:"
                            android:id="@+id/textGen"
                            android:textColor="#353535"
                            android:textSize="18dp"
                            android:layout_gravity="left|center_vertical"
                            android:textStyle="bold" />

                        <RadioButton
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:id="@+id/rdmale"
                            android:textColor="#353535"
                            android:background="#ffffff"/>

                        <RadioButton
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:id="@+id/rdfemale"
                            android:textColor="#353535"
                            android:background="#ffffff"
                            android:layout_marginLeft="30dp" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOB:"
                            android:id="@+id/textView26"
                            android:textColor="#353535"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:ems="10"
                            android:id="@+id/txtDOB"
                            android:hint="DD/MM/YYYY"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:maxLength="10"
                            android:background="#ffffff"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"/>

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/txtmail"
                        android:hint="Email"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:layout_weight="1"
                        android:textStyle="normal"
                        android:maxLength="40"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/txtpwd"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:hint="Password"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPhone"
                        android:textSize="20dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:textIsSelectable="false"
                        android:foregroundTintMode="src_over"
                        android:hint="Phone"
                        android:textStyle="normal"
                        android:layout_weight="1"
                        android:lines="1"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtHno."
                        android:layout_weight="1"
                        android:hint="House No."
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="6"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtMembers."
                        android:layout_weight="1"
                        android:hint="No. of Family Members"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="20"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtEduMem."
                        android:layout_weight="1"
                        android:hint="No. of Educated Family Members"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="20"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtWorkMem"
                        android:layout_weight="1"
                        android:hint="No. of Working Persons"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="10"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtIncome"
                        android:layout_weight="1"
                        android:hint="Total Income (monthly)"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="20"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:ems="10"
                        android:id="@+id/txtField"
                        android:layout_weight="1"
                        android:hint="Total Field Area (in hectares)"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:maxLength="6"
                        android:background="#ffffff"/>
                </TableRow>
                <RadioGroup
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Catle:"
                        android:id="@+id/textCatle"
                        android:textColor="#353535"
                        android:textSize="18dp"
                        android:layout_gravity="left|center_vertical"
                        android:textStyle="bold" />

                    <RadioButton
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:id="@+id/rdYes"
                        android:textColor="#353535"
                        android:background="#ffffff"/>

                    <RadioButton
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:id="@+id/rdNo"
                        android:textColor="#353535"
                        android:background="#ffffff"
                        android:layout_marginLeft="30dp" />
                </RadioGroup>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="match_parent"
                        android:clickable="true"
                        android:background="@drawable/abc_spinner_textfield_background_material"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtans"
                        android:textSize="20dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:textIsSelectable="false"
                        android:foregroundTintMode="src_over"
                        android:hint="Input"
                        android:textStyle="normal"
                        android:layout_weight="1"
                        android:lines="1"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SignUp"
                        android:id="@+id/btnSignUp"
                        android:background="@drawable/sign_up"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
