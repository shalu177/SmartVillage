<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dellpc.smartvillage.Home"
    tools:showIn="@layout/app_bar_home"
    android:background="@drawable/villwall">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/logo"
            android:src="@drawable/sv"
            android:baselineAlignBottom="false"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTintMode="multiply"
                android:background="@drawable/reg_btn"
                android:layout_marginRight="70dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/gmap"
                    android:src="@drawable/gmap"
                    android:clickable="true"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Village Map"
                    android:id="@+id/txtgmap"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_gravity="fill"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="-5dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTintMode="multiply"
                android:background="@drawable/irrig">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/irg"
                    android:src="@drawable/ir"
                    android:clickable="true"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Irrigation"
                    android:id="@+id/txtirg"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_gravity="fill"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="-5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTintMode="multiply"
                android:background="@drawable/vilmap"
                android:gravity="center_horizontal"
                android:layout_marginRight="70dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/crp"
                    android:src="@drawable/crpsec"
                    android:clickable="true"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingRight="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crop Security"
                    android:id="@+id/txtcrp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_gravity="fill"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="-5dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTintMode="multiply"
                android:background="@drawable/crp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/edu"
                    android:src="@drawable/educ"
                    android:clickable="true"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:id="@+id/txtedu"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_gravity="fill"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="-5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
